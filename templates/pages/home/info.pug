// info fields (width > 576px)
div(
    id="info-sm" 
    class="container text-white h-auto"
)
    div(class="row justify-content-around")
        // icons and text sections
        div(class="col-lg-3 col-md-5 col-sm-8 row justify-content-center mb-5")
            div(class="mb-2 d-flex justify-content-center h-50")
                img(
                  style="width: 150px;height: 150px;"
                  src="../static/img/link-icon.png" class="icon"
                )
            div(class="row h-auto align-items-start text-center icon-text")
